doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/admin.css')
  body
    div(class='h-admin-page')
      div(class='h-admin-page-navigation bg-dark')
        nav(class='l-admin-page-navigation navbar navbar-expand-md navbar-dark bg-dark fixed-top')
          a(class='navbar-brand' href='/admin') Admin
          
          button(class='navbar-toggler' type='button' data-toggle='collapse' data-target='#b-admin-page-navigation', aria-controls='b-admin-page-navigation')
            span(class='navbar-toggler-icon')
              
          div(class='collapse navbar-collapse' id='b-admin-page-navigation')
            ul(class='navbar-nav mr-auto')
              li(class='nav-item active')
                a(class='nav-link' href='/admin/content-categories') Content Categories
                    
              li(class='nav-item')
                a(class='nav-link' href='/admin/contents') Contents
        
      main(class='l-admin-page-content')
        block content

  script(src='/javascripts/admin.js')

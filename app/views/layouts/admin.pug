doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title= title
    link(rel='stylesheet', href='/stylesheets/admin.css')
  body
    .h-admin-page
      .h-admin-page-navigation.bg-dark
        nav(class='l-admin-page-navigation navbar navbar-expand-md navbar-dark bg-dark fixed-top')
          a.navbar-brand(href='/admin') Admin

          button(class='navbar-toggler' type='button' data-toggle='collapse' data-target='#b-admin-page-navigation', aria-controls='b-admin-page-navigation')
            span(class='navbar-toggler-icon')

          .collapse.navbar-collapse#b-admin-page-navigation
            ul.navbar-nav.mr-auto
              li.nav-item.active
                a.nav-link(href=`${adminRoutes.contentCategoriesPath()}`) Content Categories

              li.nav-item
                a.nav-link(href=`${adminRoutes.contentsPath()}`) Contents

              li.nav-item
                a.nav-link(href=`${adminRoutes.usersPath()}`) Users

      main.l-admin-page-content
        block content

  script(src='/javascripts/admin.js')

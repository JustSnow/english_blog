extends ../../layouts/admin

include ../mixins/user_role_select

block content
  h1 New user

  // TODO: try to reuse form from new action
  form.l-admin-page-form(action=`${adminRoutes.createUserPath()}` method='POST')
    .form-group.l-admin-page-form-row
      label.col-form-label.l-admin-page-form-label(for='b-content-category-first-name') First name
      .l-admin-page-form-input-wrapper
        input.form-control#b-content-category-first-name(type='text' name='firstName')

    .form-group.l-admin-page-form-row
      label.col-form-label.l-admin-page-form-label(for='b-content-category-last-name') Last name
      .l-admin-page-form-input-wrapper
        input.form-control#b-content-category-last-name(type='text' name='lastName')

    .form-group.l-admin-page-form-row
      label.col-form-label.l-admin-page-form-label(for='b-content-category-email') Email
      .l-admin-page-form-input-wrapper
        input.form-control#b-content-category-email(type='text' name='email')

    .form-group.l-admin-page-form-row
      label.col-form-label.l-admin-page-form-label Role of user
      .l-admin-page-form-input-wrapper
        +userRolesSelect(roleValues)

    .form-group.l-admin-page-form-row
      button.btn.btn-success(type='submit') Save
